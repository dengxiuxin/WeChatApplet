page{
  height:100%
}
.body{
 width: 100%;
 height: 100%;
 background-color: black;
 /* 使用flex布局 */
 display: flex;
 flex-direction: column-reverse;
}
.layout-top{
    width: 100%;
    height: 25%;/* 动态设置 */
    position: relative;
}
.layout-bottom{
    width: 100%;
    height: 74%;
    position: relative;
}
.screen {
    text-align: right;
    width: 100%;
    line-height: 400rpx;
    padding: 0 10rpx;
    font-weight: bold;
    font-size: 60px;
    box-sizing: border-box;
    border: 2px solid #bebebe;
    background-color: #000;
    color: #fff;
}
.btnGroup {
    display: flex;
    flex-direction: row;
    flex: 1;
    width: 100%;
    height: 20%;
    background-color: #fff;
}
.item {
    width:25%;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    margin-top: 1px;
    margin-right: 1px;
    margin-left: 1px;
    border-radius: 3px;
}
.item:active {
    background-color: #61eda9;
}
.zero{
    width: 50%;
}


.orange {
    color: #fff;
    background: #333;
    font-weight: bold;
}

.blue {
    color:#fff;
    background-color: #666;
}
.iconBtn{
    display: flex;
}
.icon{
   display: flex;
   align-items: center;
   width:100%;
   justify-content: center;
}